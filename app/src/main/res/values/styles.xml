<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <!--返回或更多的按钮等图标颜色-->
        <item name="colorControlNormal">?android:attr/textColorPrimaryInverse</item>
    </style>

    <style name="ImageTranslucentTheme" parent="AppTheme">
        <!--在Android 4.4之前的版本上运行，直接跟随系统主题-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--常用字体-->
    <style name="text_14_black7b7b" parent="WrapWrap">
        <item name="android:textSize">@dimen/text_fourteen</item>
        <item name="android:textColor">@color/black_7b7b7b</item>
    </style>
    <style name="edit_text">
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:textSize">@dimen/text_fourteen</item>
        <item name="android:textColorHint">@color/black_7b7b7b</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/black_7b7b7b</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">@dimen/margin_10</item>
    </style>

    <style name="button">
        <item name="android:layout_marginTop">@dimen/margin_19</item>
        <item name="android:layout_marginLeft">@dimen/margin_18</item>
        <item name="android:layout_marginRight">@dimen/margin_18</item>
    </style>

    <style name="main_bottom_rl">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="main_bottom_WH">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
    <style name="main_text_WH">
        <item name="android:layout_width">24dp</item>
        <item name="android:layout_height">24dp</item>
    </style>
</resources>
